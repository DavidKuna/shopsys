{% extends '@ShopsysShop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Bestsellers of the category'|trans }} {{ categoryName }}{% endblock %}
{% block h1 %}{{ 'Bestsellers of the category'|trans }} {{ categoryName }}{% endblock %}

{% block main_content %}
    {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="js-form-group">
            {{ form_errors(form.products) }}

            <div class="form-group">
                <div class="form-group__title">
                    {{ 'Products'|trans }}
                </div>

                <div id="{{ form.products.vars.id }}">
                    {% for productForm in form.products %}
                        <dl class="form-line form-line--small-label js-bestselling-product-container">
                            <dt>
                                {{ loop.index }}.
                            </dt>
                            <dd>
                                {{ form_widget(productForm) }}
                            </dd>
                        </dl>
                    {% endfor %}
                </div>
            </div>
        </div>

        {% embed '@ShopsysShop/Admin/Inline/FixedBar/fixedBar.html.twig' %}
            {% block fixed_bar_content %}
                {{ form_widget(form.save, {label: 'Save'|trans}) }}
                <a href="{{ url('admin_bestsellingproduct_list') }}" class="btn-link-style">{{ 'Back to overview'|trans }}</a>
            {% endblock %}
        {% endembed %}
    {{ form_end(form) }}

{% endblock %}

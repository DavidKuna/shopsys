{% extends '@ShopsysShop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Category guidepost on main page'|trans }}{% endblock %}
{% block h1 %}{{ 'Category guidepost on main page'|trans }}{% endblock %}

{% block main_content %}
    {{ render(controller('ShopsysShopBundle:Admin/Domain:domainTabs')) }}

    {{ form_start(form) }}

    {{ form_errors(form) }}
    <div class="form-group">
        <div class="form-group__title">
            {{ 'Popular categories'|trans }}
        </div>
        {{ form_row(form.categories, { label: 'Category'|trans }) }}
    </div>

    {% embed '@ShopsysShop/Admin/Inline/FixedBar/fixedBar.html.twig' %}
        {% block fixed_bar_content %}
            {{ form_widget(form.save, { label: 'Save changes'|trans }) }}
        {% endblock %}
    {% endembed %}

    {{ form_end(form) }}
{% endblock %}

{% if articles is not empty %}
    <h2>{{ 'Articles'|trans }}</h2>
    <ul class="list-articles">
        {% for article in articles %}
            <li class="list-articles__item">
                <a class="list-articles__item__block" href="{{ url('front_article_detail', { id: article.id }) }}">
                    <h3 class="list-articles__item__title">
                        {{ article.name }}
                    </h3>
                    <p class="list-articles__item__text">
                        {{ article.text|raw }}
                    </p>
                </a>
            </li>
        {% endfor %}
    </ul>
{% endif %}